<!-- views/flights/index.ejs -->
<h1>All Flights</h1>

<ul>
  <% flights.forEach(flight => { %>
    <li>
      <strong>Airline:</strong> <%= flight.airline %><br>
      <strong>Airport:</strong> <%= flight.airport %><br>
      <strong>Flight Number:</strong> <%= flight.flightNumber %><br>
      <strong>Departure Date/Time:</strong> <%= flight.departs.toLocaleString() %>
    </li>
  <% }); %>
</ul>

